{
  "name": "data-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end regression tests for DATA (Daily Task Assistant)",
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:chrome": "npx playwright test --project=chromium",
    "test:api": "npx playwright test api-health.spec.ts",
    "test:tasks": "npx playwright test tests/tasks/",
    "test:email": "npx playwright test tests/email/",
    "test:profile": "npx playwright test tests/profile/",
    "test:attention": "npx playwright test tests/attention/",
    "report": "npx playwright show-report",
    "codegen": "npx playwright codegen localhost:5173"
  },
  "keywords": ["playwright", "e2e", "testing", "data", "daily-task-assistant"],
  "author": "David Royes",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.2"
  }
}
